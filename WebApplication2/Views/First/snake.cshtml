                var code = document.getElementById("textarea1");
                code.value = "int main() {\n    \n    \n    \n    \n    \n    \n    \n    \n    	\n    \n    \n   return 0;\n}";
                food[0] = {
                    x: Math.floor(0.1 * 17 + 1) * box,
