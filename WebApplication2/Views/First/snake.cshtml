                };
                food[2] = {
                    x: Math.floor(0.3 * 17 + 1) * box,
                    y: Math.floor(0.5 * 15 + 3) * box
                };
            } else if (level === 2) {
                snake = [];
                snake[0] = {
                    x: 9 * box,
